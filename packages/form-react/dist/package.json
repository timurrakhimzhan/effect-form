{
  "name": "@lucas-barake/effect-form-react",
  "version": "0.15.9",
  "description": "React bindings for @lucas-barake/effect-form",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucas-barake/effect-form.git"
  },
  "homepage": "https://github.com/lucas-barake/effect-form",
  "scripts": {
    "build": "pnpm build-esm && pnpm build-cjs && pnpm build-annotate && pnpm build-pack",
    "build-pack": "rm -rf dist && mkdir -p dist/dist && cp -r build/* dist/dist/ && cp package.json dist/ && cp ../../LICENSE dist/ && cp README.md dist/ 2>/dev/null || true",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build --plugins annotate-pure-calls --out-dir build --source-maps"
  },
  "keywords": [
    "effect",
    "form",
    "react",
    "schema",
    "validation",
    "typescript"
  ],
  "author": "Lucas Barake",
  "license": "MIT",
  "sideEffects": [],
  "dependencies": {
    "@lucas-barake/effect-form": "workspace:^"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1"
  },
  "peerDependencies": {
    "@effect-atom/atom": "^0.4.8",
    "@effect-atom/atom-react": "^0.4.3",
    "effect": "^3.19.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "main": "./dist/dist/cjs/index.js",
  "module": "./dist/dist/esm/index.js",
  "types": "./dist/dist/dts/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/dist/dts/index.d.ts",
      "import": "./dist/dist/esm/index.js",
      "default": "./dist/dist/cjs/index.js"
    },
    "./useArrayField": {
      "types": "./dist/dist/dts/useArrayField.d.ts",
      "import": "./dist/dist/esm/useArrayField.js",
      "default": "./dist/dist/cjs/useArrayField.js"
    },
    "./useFormField": {
      "types": "./dist/dist/dts/useFormField.d.ts",
      "import": "./dist/dist/esm/useFormField.js",
      "default": "./dist/dist/cjs/useFormField.js"
    }
  },
  "typesVersions": {
    "*": {
      "useArrayField": [
        "./dist/dist/dts/useArrayField.d.ts"
      ],
      "useFormField": [
        "./dist/dist/dts/useFormField.d.ts"
      ]
    }
  }
}
